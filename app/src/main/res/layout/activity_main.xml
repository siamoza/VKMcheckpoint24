<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bgr"
    tools:context=".MainActivity">
    <!-- основной макет -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_below="@id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="auto"
        android:orientation="vertical"
        android:visibility="visible"/>
    <!-- блок заголовка приложения -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_title_bgr"
        android:text="@string/txtHeader"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/background" />
    <!-- блок выбора участка и идентификации бригадира -->
    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@id/title"
        android:id="@+id/site_brig"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/site_bgr"
        android:orientation="horizontal">
        <!-- блок радио с выбором участка -->
        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom|center_horizontal"
            >
            <!-- радио ВКМ-1 -->
            <RadioButton
                android:id="@+id/radioVKM1"
                style="@style/radioButtons"
                android:minHeight="48dp"
                android:text="@string/txtVKM1" />
            <!-- радио ВКМ-2 -->
            <RadioButton
                android:id="@+id/radioVKM2"
                style="@style/radioButtons"
                android:minHeight="48dp"
                android:text="@string/txtVKM2" />
            <!-- радио Депо -->
            <RadioButton
                android:id="@+id/radioDepo"
                style="@style/radioButtons"
                android:minHeight="48dp"
                android:text="@string/txtDepo" />
        </RadioGroup>
        <!-- блок с кодом бригадира -->
        <EditText
            android:id="@+id/brigadier"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/radio"
            android:focusableInTouchMode="true"
            android:gravity="bottom|center_horizontal"
            android:hint="@string/hintBrigadier"
            android:importantForAutofill="no"
            android:inputType="textCapCharacters"
            android:paddingStart="5dp"
            android:paddingTop="1dp"
            android:paddingEnd="2dp"
            android:textColor="@color/black"
            android:textColorHint="#795548"
            android:textSize="14sp" />
    </RelativeLayout>
    <!-- блок со сканером бирки -->
    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/site_brig"
        android:id="@+id/scanner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:focusable="auto"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/numb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/numb"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/buttonScan"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="@string/buttonScan"
            android:textColor="#607D8B"
            android:textSize="24sp" />


    </RelativeLayout>
    <!-- основной составной блок, параметры КП -->
    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@id/scanner"
        android:id="@+id/axis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:focusable="auto"
        android:orientation="vertical"
        android:visibility="visible">
        <!-- заголовок бирки -->
        <TextView
            android:id="@+id/headerLabel"
            android:text="@string/txtLabel"
            style="@style/labels"/>
        <EditText
            android:id="@+id/label"
            android:layout_width="64dp"
            android:layout_toEndOf="@+id/headerLabel"
            android:hint="@string/hint5minus"
            android:inputType="number"
            android:maxEms="5"
            android:maxLength="5"
            android:nextFocusDown="@id/factory"
            style="@style/inputs"
            tools:ignore="Autofill" />
        <!-- заголовок завода -->
        <TextView
            android:id="@+id/headerFactory"
            android:layout_toEndOf="@+id/label"
            android:text="@string/headerFactory"
            style="@style/labels" />
        <!-- поле ввода завода -->
        <EditText
            android:id="@+id/factory"
            android:layout_width="50dp"
            android:layout_toEndOf="@+id/headerFactory"
            android:hint="@string/hint4minus"
            android:inputType="number"
            android:maxEms="4"
            android:maxLength="4"
            android:nextFocusDown="@id/axisNumber"
            style="@style/inputs"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/axisNumber"
            android:layout_toEndOf="@+id/factory"
            android:text="@string/number"
            style="@style/labels" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>